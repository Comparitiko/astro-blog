---
import TypedBlogPost from "@/components/TypedBlogPost.astro";
import { siteConfig } from "@/config/site-config";
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
---

<Layout title="Comparitiko`s Blog">
  <section class="bg-gray-900">
    <div class="container px-6 py-10 mx-auto">
      <h1 class="text-3xl font-semibold lg:text-4xl text-white">
        {siteConfig.title}
      </h1>

      <a class="text-blue-500 hover:underline" href="/blog/1">Blog paginado</a>

      <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
        {posts.map((post) => <TypedBlogPost post={post} />)}
      </div>
    </div>
  </section>
</Layout>
